<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="#D5EDFC"
    >

    <ImageView
        android:id="@+id/shelf"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:src = "@drawable/shelf2"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/textView"
        />


    <ImageView
        android:id="@+id/mag"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:src="@drawable/mag2"
        android:layout_alignTop="@+id/shelf"
        android:layout_alignLeft="@+id/shelf"
        android:padding="2dp"
            />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/textview"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/b1"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEARCH BY CATEGORY"
        android:background="@drawable/button_bg"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:onClick="category"
        android:layout_marginLeft="22dp"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/b2"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEARCH BY NAME"
        android:background="@drawable/button_bg"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:onClick="list"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>